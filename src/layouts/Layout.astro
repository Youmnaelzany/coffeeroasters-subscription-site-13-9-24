---
import Header from '@/components/Header.astro';

interface Props {
  title: string;
  description?: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/src/assets/favicon-32x32.png'
    />
    <meta name='generator' content={Astro.generator} />
    <!-- Google Fonts 'Fraunces' & 'Barlow' -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Fraunces:ital,opsz,wght@0,9..144,100..900;1,9..144,100..900&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <body
    class='mx-6 mb-[4.5rem] mt-8 max-w-[90rem] bg-[#FEFCF7] sm:ml-[2.44rem] sm:mr-10 sm:mt-10 xl:mx-20 xl:mb-[5.5rem] xl:mt-[2.72rem]'
  >
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font: inherit;
  }

  html {
    hanging-punctuation: first last;
  }

  body {
    min-height: 100svh;
  }

  img,
  picture,
  svg,
  video {
    font-style: italic;
    background-repeat: no-repeat;
    background-size: cover;
    shape-margin: 1rem;
    max-width: 100%;
    height: auto;
    vertical-align: middle;
  }

  @media (prefers-reduced-motion: no-preference) {
    :has(:target) {
      scroll-behavior: smooth;
      scroll-padding-top: 3rem;
    }
  }
</style>
